  "devDependencies": {
    "@antfu/eslint-config": "^0.23.1",
    "@types/node": "^17.0.35",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "eslint": "8.15.0",
    "esno": "^0.16.3",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "tsup": "^5.12.8",
    "typescript": "^4.6.4",
