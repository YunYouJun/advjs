{
  "name": "@advjs/monorepo",
  "type": "module",
  "version": "0.1.1",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "description": "面向未来与前端的 ADV 文字冒险游戏引擎。",
  "author": {
    "name": "YunYouJun",
    "email": "me@yunyoujun.cn",
    "url": "https://www.yunyoujun.cn"
  },
  "license": "MPL-2.0",
  "homepage": "https://advjs.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/YunYouJun/advjs"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm build:packages",
    "prepublishOnly": "pnpm run build:schema",
    "build:advjs": "pnpm types:build && pnpm parser:build && pnpm core:build && pnpm advjs:build",
    "build:demo": "pnpm -C demo/starter run build",
    "build:packages": "pnpm -r --filter=\"./packages/*\" run build",
    "build:schema": "tsx scripts/schema.ts",
    "build:play": "pnpm run play:build",
    "build:plugins": "pnpm -r --parallel --filter=\"./plugins/*\" run build",
    "clean": "tsx scripts/clean.ts",
    "demo": "pnpm -C demo/starter run dev",
    "demo:love": "pnpm -C demo/love run dev",
    "demo:flow": "pnpm -C demo/flow run dev",
    "start": "pnpm -C packages/advjs run start",
    "dev": "pnpm run dev:packages & pnpm run dev:plugins",
    "dev:lib": "run-p core:dev parser:dev & pnpm run advjs:dev",
    "dev:vrm": "run-p vrm:dev babylon:dev",
    "dev:packages": "pnpm -r --parallel --filter=\"./packages/*\" run dev",
    "dev:plugins": "pnpm -r --parallel --filter=\"./plugins/*\" run dev",
    "editor": "pnpm -C editor/core run dev",
    "lint": "eslint .",
    "preview": "pnpm -C packages/advjs preview",
    "advjs:build": "pnpm -C packages/advjs run build",
    "advjs:dev": "pnpm -C packages/advjs run dev",
    "core:build": "pnpm -C packages/core build",
    "core:dev": "pnpm -C packages/core dev",
    "docs": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "docs:dev": "pnpm -C docs dev",
    "docs:pre": "pnpm -C docs predocs",
    "docs:serve": "pnpm -C docs serve",
    "editor:build": "pnpm -C editor/core build",
    "gui:build": "pnpm -C packages/gui build",
    "parser:build": "pnpm -C packages/parser build",
    "parser:dev": "pnpm -C packages/parser dev",
    "parser:play": "pnpm -C packages/parser play",
    "parser:play:build": "pnpm -C packages/parser play:build",
    "plugins:build": "pnpm -r --filter=\"./plugins/plugin-*\" run build",
    "play:build": "pnpm -C playground build",
    "play:dev": "pnpm -C playground dev",
    "play": "pnpm run play:dev",
    "vrm:build": "pnpm -C editor/vrm build",
    "vrm:dev": "pnpm -C editor/vrm dev",
    "release": "bumpp",
    "release:advjs": "bumpp",
    "release:local:advjs": "bumpp --no-commit --no-push --no-tag && pnpm -r publish --tag beta --no-git-checks",
    "release:gui": "pnpm -C packages/gui run release",
    "release:local": "pnpm -r publish --no-git-checks --access public",
    "types:build": "pnpm -C packages/types build",
    "types:dev": "pnpm -C packages/types dev",
    "typecheck": "vue-tsc --noEmit --skipLibCheck",
    "typedoc:serve": "serve docs/api/dist",
    "e2e": "playwright test",
    "e2e:ui": "pnpm exec playwright test --ui",
    "test": "vitest",
    "test:unit": "vitest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@advjs/core": "workspace:*",
    "@advjs/gui": "workspace:*",
    "@advjs/parser": "workspace:*",
    "@advjs/plugin-babylon": "workspace:*",
    "@advjs/theme-default": "workspace:*",
    "@advjs/types": "workspace:*",
    "@antfu/eslint-config": "catalog:dev",
    "@antfu/ni": "catalog:utils",
    "@playwright/test": "catalog:test",
    "@types/fs-extra": "catalog:types",
    "@types/howler": "catalog:types",
    "@types/node": "catalog:types",
    "@types/prompts": "catalog:types",
    "@types/semver": "catalog:types",
    "@types/unist": "catalog:types",
    "@types/wicg-file-system-access": "catalog:types",
    "@types/yargs": "catalog:types",
    "@unocss/eslint-plugin": "catalog:dev",
    "@webgpu/types": "catalog:types",
    "advjs": "workspace:*",
    "bumpp": "catalog:utils",
    "consola": "catalog:cli",
    "cross-env": "catalog:utils",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "husky": "catalog:dev",
    "lint-staged": "catalog:dev",
    "npm-run-all": "catalog:cli",
    "rimraf": "catalog:utils",
    "tsx": "catalog:dev",
    "typedoc": "catalog:docs",
    "typescript": "catalog:dev",
    "typescript-json-schema": "^0.65.1",
    "unbuild": "catalog:build",
    "vite": "catalog:build",
    "vitest": "catalog:test",
    "vue-tsc": "catalog:dev"
  },
  "resolutions": {
    "typescript": "catalog:dev",
    "vite": "catalog:build"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ]
  }
}
