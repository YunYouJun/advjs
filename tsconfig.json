{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      // "@babylonjs/core",
      // "@babylonjs/loaders",
      // "@babylonjs/gui",
      // "@babylonjs/materials",
      // "babylon-vrm-loader",
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "paths": {
      "~/*": ["./packages/client/*"],
      "advjs": ["./packages/advjs/node/index.ts"],
      "@advjs/core": ["./packages/core/src/index.ts"],
      "@advjs/core/*": ["./packages/core/src/*"],
      "@advjs/client/*": ["./packages/client/*"],
      "@advjs/editor/*": ["./packages/editor/src/*"],
      "@advjs/examples/*": ["./packages/examples/*"],
      "@advjs/parser": ["./packages/parser/src/index.ts"],
      "@advjs/parser/fs": ["./packages/parser/src/fs.ts"],
      "@advjs/shared": ["./packages/shared/src/index.ts"],
      "@advjs/shared/*": ["./packages/shared/src/*"],
      "@advjs/types": ["./packages/types/src/index.ts"],
      "@advjs/theme-default": ["./packages/theme-default/index.ts"],
      "@advjs/theme-default/*": ["./packages/theme-default/*"],
      "advjs/*": ["./packages/advjs/src/*"]
    }
  },
  "include": [
    "./docs/.vitepress/**/*.ts",
    "./docs/.vitepress/**/*.vue",
    "./packages/global.d.ts",
    "./packages/**/*.ts",
    "./packages/**/*.vue"
  ],
  "exclude": ["**/dist/**", "node_modules"]
}
