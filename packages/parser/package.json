{
  "name": "@advjs/parser",
  "version": "0.0.1",
  "description": "A parser for advjs.",
  "author": {
    "name": "YunYouJun",
    "email": "me@yunyoujun.cn",
    "url": "https://www.yunyoujun.cn"
  },
  "license": "MPL-2.0",
  "homepage": "https://github.com/YunYouJun/advjs/tree/main/packages/parser#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "require": "./dist/core.js",
      "import": "./dist/core.mjs"
    },
    "./fs": {
      "types": "./fs.d.ts",
      "require": "./dist/fs.js",
      "import": "./dist/fs.mjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "nr build --watch",
    "temp": "tsx test/index.ts",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@advjs/types": "workspace:*",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "mdast-util-to-hast": "^12.1.1",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/mdast": "^3.0.10"
  }
}
